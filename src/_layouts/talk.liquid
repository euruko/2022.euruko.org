---
layout: default
---
{% render "sidekick", page: page, site: site %}

<section id="info" class="section section--lightdarkblue">
  <div class="section__container">
    <div class="section__inner-container">
      <div class="section__columns">
        <div class="section__small-column">
          <h1 id="heading-info" class="section__heading section__heading--teal">
            {{ resource.data.start_time | date: "%A %H:%M" }}
          </h1>
          {% comment %}
          <p class="section__info">
            {{ description }}
          </p>
          {% endif %}
          {% endcomment %}
        </div>
        <div class="section__large-column">
          <div class="section__content">
            {{ content }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% if resource.relations.speaker %}
  {% assign speaker = resource.relations.speaker %}
  <section id="info" class="section section--darkblue">
    <div class="section__container">
      <div class="section__inner-container">
        <div class="section__columns">
          <div class="section__small-column">
            <h1 id="heading-info" class="section__heading section__heading--teal">
              {{ speaker.name }}
            </h1>
            {% comment %}
            <p class="section__info">
              {{ description }}
            </p>
            {% endif %}
            {% endcomment %}
          </div>
          <div class="section__large-column">
            <div class="section__content">
              {{ speaker.bio | markdownify }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}
