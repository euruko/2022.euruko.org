---
// Component Imports
import Header from "../components/Header.astro";
import MailingList from '../components/MailingList.astro';

let title = 'Euruko 2022';
let socialImageUrl = new URL("/assets/social.png", Astro.site);
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#f15a5b" />

    <link rel="stylesheet" href="/style/global.css">
    <link rel="stylesheet" href="/style/home.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css?family=Be+Vietnam:500,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Nixie+One&display=swap&display=swap&text=2022Q4" rel="stylesheet">

    <link rel="canonical" href="{Astro.site}">

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@euruko" />
    <meta name="twitter:creator" content="@euruko" />
    <meta property="twitter:title" content="Euruko '22" />
    <meta property="twitter:description" content="We're aiming to hold an in-person Euruko in Helsinki sometime in the last quarter of 2022. At this time we can't offer any more details about the event." />
    <meta property="twitter:image" content="{socialImageUrl}" />

    <meta property="og:type" content="website">
    <meta property="og:title" content="Euruko '22">
    <meta property="og:description" content="We're aiming to hold an in-person Euruko in Helsinki sometime in the last quarter of 2022. At this time we can't offer any more details about the event.">
    <meta property="og:image" content="{socialImageUrl}">
    <meta property="og:url" content="{Astro.site}">
</head>
<body>
    <main>
        <Header />

        <MailingList />
    </main>
    <!-- Cloudflare Web Analytics --><script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='&lbrace;"token": "72eb734d9e0b4751a41648994b493fa9"&rbrace;'></script><!-- End Cloudflare Web Analytics -->
</body>
</html>
