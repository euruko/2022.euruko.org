<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
{% capture page_title %}{{ title | strip_html | strip_newlines }}{% endcapture %}
<title>{% if page_title != "" %}{{ page_title | escape }} | {{ metadata.title | escape }}{% else %}{{ metadata.title | escape }}{% endif %}</title>

<link rel="canonical" href="{{page.absolute_url}}">
<meta name="description" content="{{ metadata.description }}" />

<link rel="dns-prefetch" href="https://buttondown.email">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Be+Vietnam:wght@500;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Nixie+One&display=swap&display=swap&text=13%E2%80%9314%20Oct%202022" rel="stylesheet">
<link rel="stylesheet" href="{% webpack_path css %}" />
<script src="{% webpack_path js %}" defer></script>

<link rel="icon" type="image/svg+xml" href="{% webpack_path images/safari-pinned-tab.svg %}" />
<link rel="icon" type="image/png" href="{% webpack_path images/favicon.png %}" />
<link rel="mask-icon" href="{% webpack_path images/safari-pinned-tab.svg %}" color="#f15a5b">
<link rel="apple-touch-icon" href="{% webpack_path images/apple-touch-icon.png %}">

{% for href in metadata.prefetch -%}
{% if href != page.url %}<link rel="prefetch" href="{{href}}" as="document" />{% endif %}
{% endfor -%}

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@euruko" />
<meta name="twitter:creator" content="@euruko" />
<meta property="twitter:title" content="{% if page_title != "" %}{{ page_title | escape }}{% else %}{{ metadata.title | escape }}{% endif %}" />
<meta property="twitter:description" content="{{ metadata.description }}" />
<meta property="twitter:image" content="{{site.url}}{% webpack_path images/social.png %}" />

<meta property="og:type" content="website">
<meta property="og:title" content="{% if page_title != "" %}{{ page_title | escape }}{% else %}{{ metadata.title | escape }}{% endif %}" />
<meta property="og:description" content="{{ metadata.description }}">
<meta property="og:image" content="{{site.url}}{% webpack_path images/social.png %}">
<meta property="og:url" content="{{page.absolute_url}}">
