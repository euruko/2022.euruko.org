<section id="speakers" class="section section--lightdarkblue speakers">
  <div class="section__container">
    <div class="section__inner-container">
      <h1
        id="heading-speakers"
        class="section__heading section__heading--orange"
      >
        Speakers
      </h1>
      <p class="section__info">
        We are proud to have the following speakers at our conference.
      </p>
      <div class="speakers__profiles">
        {% assign categories = "keynote, mc, normal, lightning" | split: ", " %}

        {% for category in categories %}
          {% assign speakers = collections.speakers.resources | where: "data.category", category %}
          {% for speaker in speakers %}
            {{ speaker.content }}
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>
