<section id="speakers" class="section section--darkblue speakers">
  <div class="section__container">
    <div class="section__inner-container">
      <h1
        id="heading-speakers"
        class="section__heading section__heading--orange"
      >
        Speakers
      </h1>
      <p class="section__info">
        Say hi to our wonderful speakers!
      </p>
      <div class="speakers__profiles">
        {% assign categories = "keynote, mc, normal, lightning, cfp, tba" | split: ", " %}

        {% for category in categories %}
          {% assign speakers = collections.speakers.resources | where: "published", true | where: "data.category", category | sort: "name" %}
          {% if category == "keynote" %}
            {% assign speakers =  speakers | reverse %}
          {% endif %}
          {% for speaker in speakers %}
            {{ speaker }}
          {% endfor %}
        {% endfor %}
      </div>
      <div class="speakers__cta">
        <a href="{{ "/schedule" | relative_url }}" class="section__cta section__cta--large section__cta--green">
          See the full schedule
        </a>
      </div>
    </div>
  </div>
</section>
