<div class="speakers__profile">
  <!-- TODO: add the bio -->
  <a
    href="{{ speaker.url }}"
    target="_blank"
    rel="noopener noreferrer"
    class="profile profile--keynote"
  >
    <div class="profile__container">
      <div class="profile__background"></div>
      <div class="profile__image">
        <img
          src="{{ image }}"
          alt="{{ speaker.name }}"
          loading="lazy"
        />
      </div>
      {% if speaker.category == "keynote" %}
        <div class="profile__keynote">
          KEYNOTE
        </div>
      {% elsif speaker.category == "mc" %}
        <div class="profile__mc">
          <abbr title="Master of ceremonies">MC</abbr>
        </div>
      {% endif %}
    </div>
    <span class="profile__name">
      {{ speaker.name }}
    </span>
  </a>
</div>
